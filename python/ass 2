string=input("enter the string:")
visitedchar=""
print("character frequency")
for i in string:
    if i not in visitedchar:
        count=0;
        for j in string:
            if i==j:
                count=count+1;
        print(f"{i}:{count}")
        visitedchar=visitedchar+i
        
        
        
        
